<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.wychua.ocbcapp.MainFragment"
        android:label="MainFragment">
        <action
            android:id="@+id/action_mainFragment_to_transferFragment"
            app:destination="@id/transferFragment"/>
        <action
            android:id="@+id/action_mainFragment_to_topupFragment"
            app:destination="@id/topupFragment"/>
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.wychua.ocbcapp.LoginFragment"
        android:label="LoginFragment">
    </fragment>

    <fragment
        android:id="@+id/transferFragment"
        android:name="com.wychua.ocbcapp.TransferFragment"
        android:label="TransferFragment">
    </fragment>

    <fragment
        android:id="@+id/topupFragment"
        android:name="com.wychua.ocbcapp.TopUpFragment"
        android:label="TopUpFragment">
    </fragment>

</navigation>